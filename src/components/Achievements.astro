    <style>
        :root {
            --bg-dark: #0a0a0a;
            --text-main: #e5e5e5;
            --text-muted: #a3a3a3;
            --accent: #8b5cf6;
            --accent-glow: rgba(139, 92, 246, 0.3);
            --border: #262626;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            font-family: 'Outfit', sans-serif;
            background: var(--bg-dark);
            color: var(--text-main);
            line-height: 1.6;
        }

        #achievements-section {
            padding: 5rem 1.5rem;
            min-height: 100vh;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
        }

        /* Header */
        .section-header {
            margin-bottom: 4rem;
            text-align: center;
        }

        .title {
            font-family: 'Space Grotesk', sans-serif;
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 2rem;
            background: linear-gradient(to right, #fff, #a3a3a3);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* Tabs */
        .tabs {
            display: inline-flex;
            background: #171717;
            padding: 0.3rem;
            border-radius: 100px;
            border: 1px solid var(--border);
        }

        .tab-btn {
            background: transparent;
            border: none;
            color: var(--text-muted);
            padding: 0.6rem 1.5rem;
            border-radius: 100px;
            font-family: 'Outfit', sans-serif;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .tab-btn.active {
            background: var(--accent);
            color: #fff;
            box-shadow: 0 4px 12px var(--accent-glow);
        }

        .tab-btn:hover:not(.active) {
            color: #fff;
        }

        /* Content */
        .tab-content {
            display: none;
            animation: fadeIn 0.5s ease;
        }

        .tab-content.active {
            display: block;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Timeline */
        .timeline {
            position: relative;
            padding-left: 2rem;
        }

        .timeline::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 2px;
            background: linear-gradient(to bottom, var(--accent), transparent);
        }

        .timeline-item {
            position: relative;
            padding-bottom: 4rem;
            padding-left: 2rem;
        }

        .timeline-marker {
            position: absolute;
            left: -2.5rem; /* Adjust based on padding-left of timeline-item + timeline padding */
            top: 0.4rem;
            width: 12px;
            height: 12px;
            background: var(--bg-dark);
            border: 2px solid var(--accent);
            border-radius: 50%;
            z-index: 2;
            box-shadow: 0 0 10px var(--accent-glow);
        }
        
        /* Fix marker position calculation */
        .timeline-item { padding-left: 1.5rem; }
        .timeline-marker { left: -2.45rem; }

        .timeline-date {
            font-family: 'Space Grotesk', sans-serif;
            color: var(--accent);
            font-weight: 600;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .timeline-content h3 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 0.8rem;
            color: #fff;
        }

        .timeline-content p {
            color: var(--text-muted);
            margin-bottom: 1.5rem;
            max-width: 600px;
        }

        /* Gallery Grid */
        .gallery-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
            gap: 1rem;
        }

        .gallery-item {
            position: relative;
            border-radius: 12px;
            overflow: hidden;
            aspect-ratio: 16/10;
            cursor: pointer;
            border: 1px solid var(--border);
            transition: all 0.3s ease;
        }

        .gallery-item:hover {
            transform: translateY(-4px);
            border-color: var(--accent);
            box-shadow: 0 10px 20px rgba(0,0,0,0.3);
        }

        .gallery-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .gallery-item:hover img {
            transform: scale(1.05);
        }

        /* Workshop Feature */
        .workshop-feature {
            background: #111;
            border: 1px solid var(--border);
            border-radius: 20px;
            padding: 2.5rem;
            position: relative;
            overflow: hidden;
        }

        .workshop-feature::after {
            content: '';
            position: absolute;
            top: 0; right: 0;
            width: 200px;
            height: 200px;
            background: radial-gradient(circle, var(--accent-glow) 0%, transparent 70%);
            opacity: 0.5;
            pointer-events: none;
        }

        .workshop-header {
            margin-bottom: 1.5rem;
        }

        .workshop-meta {
            color: var(--accent);
            font-size: 0.9rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .workshop-header h3 {
            font-size: 2rem;
            font-family: 'Space Grotesk', sans-serif;
            margin-bottom: 1rem;
        }

        .workshop-stats {
            display: flex;
            gap: 1.5rem;
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        .workshop-stats i {
            color: var(--accent);
            margin-right: 0.5rem;
        }

        .workshop-body {
            margin-bottom: 2rem;
        }

        .tags {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
            margin-top: 1rem;
        }

        .tags span {
            background: rgba(255,255,255,0.05);
            padding: 0.4rem 0.8rem;
            border-radius: 6px;
            font-size: 0.85rem;
            color: #d4d4d4;
            border: 1px solid transparent;
        }

        /* Lightbox */
        .lightbox {
            position: fixed;
            inset: 0;
            z-index: 1000;
            display: none;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .lightbox.active {
            display: flex;
            opacity: 1;
        }

        .lightbox-backdrop {
            position: absolute;
            inset: 0;
            background: rgba(0, 0, 0, 0.95);
            backdrop-filter: blur(5px);
        }

        .lightbox-content {
            position: relative;
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1001;
        }

        .lb-image-wrapper {
            max-width: 90%;
            max-height: 85vh;
            position: relative;
        }

        .lb-image {
            max-width: 100%;
            max-height: 85vh;
            object-fit: contain;
            border-radius: 4px;
            box-shadow: 0 0 50px rgba(0,0,0,0.5);
        }

        .lb-close, .lb-nav {
            position: absolute;
            background: rgba(255,255,255,0.15);
            border: none;
            color: #fff;
            cursor: pointer;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            -webkit-tap-highlight-color: transparent;
            touch-action: manipulation;
            user-select: none;
        }

        .lb-close:hover, .lb-nav:hover {
            background: rgba(255,255,255,0.3);
            transform: scale(1.1);
        }
        
        .lb-close:active, .lb-nav:active {
            background: rgba(138, 43, 226, 0.5);
            transform: scale(0.95);
        }

        .lb-close {
            top: 2rem;
            right: 2rem;
            width: 48px;
            height: 48px;
            font-size: 1.5rem;
            z-index: 1002;
        }

        .lb-nav {
            top: 50%;
            transform: translateY(-50%);
            width: 56px;
            height: 56px;
            font-size: 1.2rem;
            z-index: 1002;
        }

        .lb-nav.prev { left: 2rem; }
        .lb-nav.next { right: 2rem; }

        .lb-counter {
            position: absolute;
            bottom: 2rem;
            color: var(--text-muted);
            font-family: 'Space Grotesk', sans-serif;
            font-size: 1rem;
            letter-spacing: 2px;
        }

        /* Tablet Responsive */
        @media (max-width: 968px) {
            #achievements-section {
                padding: 3rem 1rem;
            }
            
            .title { font-size: 2.5rem; }
            
            .workshop-header h3 {
                font-size: 1.5rem;
            }
            
            .workshop-feature {
                padding: 1.5rem;
            }
            
            .workshop-stats {
                flex-wrap: wrap;
                gap: 1rem;
            }
        }

        @media (max-width: 768px) {
            .title { font-size: 2rem; }
            .timeline { padding-left: 1.5rem; }
            .timeline-marker { left: -1.9rem; }
            .gallery-grid { grid-template-columns: 1fr 1fr; }
            
            .timeline-content h3 {
                font-size: 1.2rem;
            }
            
            .timeline-item {
                padding-bottom: 2.5rem;
            }
            
            .tabs {
                flex-direction: column;
                width: 100%;
                max-width: 280px;
            }
            
            .tab-btn {
                width: 100%;
                text-align: center;
            }
            
            /* Lightbox mobile fixes */
            .lb-close {
                top: 1rem;
                right: 1rem;
                width: 48px;
                height: 48px;
                font-size: 1.3rem;
                z-index: 1002;
                background: rgba(0, 0, 0, 0.6);
            }
            
            .lb-nav {
                width: 48px;
                height: 48px;
                font-size: 1.2rem;
                z-index: 1002;
                background: rgba(0, 0, 0, 0.6);
            }
            
            .lb-nav.prev { left: 0.5rem; }
            .lb-nav.next { right: 0.5rem; }
            
            .lb-nav:active, .lb-close:active {
                background: rgba(138, 43, 226, 0.7);
            }
            
            .lb-image-wrapper {
                max-width: 95%;
                max-height: 70vh;
            }
            
            .lb-image {
                max-height: 70vh;
            }
            
            .lb-counter {
                bottom: 1rem;
                font-size: 0.9rem;
            }
        }
        
        @media (max-width: 480px) {
            #achievements-section {
                padding: 2rem 0.75rem;
            }
            
            .title { font-size: 1.75rem; }
            
            .section-header {
                margin-bottom: 2.5rem;
            }
            
            .gallery-grid { 
                grid-template-columns: 1fr; 
                gap: 0.75rem;
            }
            
            .gallery-item {
                aspect-ratio: 16/9;
            }
            
            .timeline {
                padding-left: 1rem;
            }
            
            .timeline-item {
                padding-left: 1rem;
            }
            
            .timeline-marker {
                left: -1.5rem;
                width: 10px;
                height: 10px;
            }
            
            .workshop-feature {
                padding: 1rem;
            }
            
            .workshop-header h3 {
                font-size: 1.25rem;
            }
            
            .tags {
                gap: 0.4rem;
            }
            
            .tags span {
                padding: 0.3rem 0.6rem;
                font-size: 0.75rem;
            }
            
            /* Lightbox small mobile */
            .lb-nav {
                width: 44px;
                height: 44px;
            }
            
            .lb-close {
                width: 44px;
                height: 44px;
            }
            
            .lb-nav.prev { left: 0.25rem; }
            .lb-nav.next { right: 0.25rem; }
            
            .lb-image-wrapper {
                max-width: 98%;
                max-height: 60vh;
            }
            
            .lb-image {
                max-height: 60vh;
            }
        }
    </style>

    <script>
        // Tab Logic
        const tabs = document.querySelectorAll('.tab-btn');
        const contents = document.querySelectorAll('.tab-content');

        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                tabs.forEach(t => t.classList.remove('active'));
                contents.forEach(c => c.classList.remove('active'));
                
                tab.classList.add('active');
                const target = document.querySelector(tab.dataset.target);
                if (target) target.classList.add('active');
            });
        });

        // Lightbox Logic
        const lightbox = document.getElementById('lightbox');
        const lbImage = lightbox.querySelector('.lb-image');
        const lbCounter = lightbox.querySelector('.lb-counter');
        const closeBtn = lightbox.querySelector('.lb-close');
        const prevBtn = lightbox.querySelector('.lb-nav.prev');
        const nextBtn = lightbox.querySelector('.lb-nav.next');
        const backdrop = lightbox.querySelector('.lightbox-backdrop');

        let currentGallery = [];
        let currentIndex = 0;
        
        // Touch/Swipe variables
        let touchStartX = 0;
        let touchEndX = 0;
        const minSwipeDistance = 50;

        // Open Lightbox
        document.querySelectorAll('.gallery-item').forEach(item => {
            item.addEventListener('click', function(e) {
                e.preventDefault();
                const grid = this.closest('.gallery-grid');
                // Get all images in this specific grid
                currentGallery = Array.from(grid.querySelectorAll('img')).map(img => ({
                    src: img.src,
                    alt: img.alt
                }));
                
                // Find index of clicked image
                const clickedImg = this.querySelector('img');
                currentIndex = currentGallery.findIndex(img => img.src === clickedImg.src);
                
                updateLightbox();
                lightbox.classList.add('active');
                document.body.style.overflow = 'hidden';
            });
            
            // Also add touch event for mobile
            item.addEventListener('touchend', function(e) {
                // Prevent double-firing
                if (e.cancelable) e.preventDefault();
            });
        });

        function updateLightbox() {
            const imgData = currentGallery[currentIndex];
            lbImage.src = imgData.src;
            lbImage.alt = imgData.alt;
            lbCounter.textContent = `${currentIndex + 1} / ${currentGallery.length}`;
            
            // Hide nav buttons if only 1 image
            prevBtn.style.display = currentGallery.length > 1 ? 'flex' : 'none';
            nextBtn.style.display = currentGallery.length > 1 ? 'flex' : 'none';
        }

        function navigate(direction) {
            currentIndex = (currentIndex + direction + currentGallery.length) % currentGallery.length;
            updateLightbox();
        }

        function closeLightbox() {
            lightbox.classList.remove('active');
            document.body.style.overflow = '';
        }

        // Event Listeners - Click
        closeBtn.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            closeLightbox();
        });
        
        backdrop.addEventListener('click', closeLightbox);
        
        prevBtn.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            navigate(-1);
        });
        
        nextBtn.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            navigate(1);
        });
        
        // Touch Events for buttons (mobile fix)
        closeBtn.addEventListener('touchend', function(e) {
            e.preventDefault();
            e.stopPropagation();
            closeLightbox();
        });
        
        prevBtn.addEventListener('touchend', function(e) {
            e.preventDefault();
            e.stopPropagation();
            navigate(-1);
        });
        
        nextBtn.addEventListener('touchend', function(e) {
            e.preventDefault();
            e.stopPropagation();
            navigate(1);
        });
        
        // Swipe gesture support for image navigation
        lightbox.addEventListener('touchstart', function(e) {
            touchStartX = e.changedTouches[0].screenX;
        }, { passive: true });
        
        lightbox.addEventListener('touchend', function(e) {
            // Don't process if touching nav buttons
            if (e.target.closest('.lb-nav') || e.target.closest('.lb-close')) return;
            
            touchEndX = e.changedTouches[0].screenX;
            handleSwipe();
        });
        
        function handleSwipe() {
            const swipeDistance = touchEndX - touchStartX;
            
            if (Math.abs(swipeDistance) > minSwipeDistance) {
                if (swipeDistance > 0) {
                    // Swiped right - go to previous
                    navigate(-1);
                } else {
                    // Swiped left - go to next
                    navigate(1);
                }
            }
        }

        // Keyboard Navigation
        document.addEventListener('keydown', (e) => {
            if (!lightbox.classList.contains('active')) return;
            
            if (e.key === 'Escape') closeLightbox();
            if (e.key === 'ArrowLeft') navigate(-1);
            if (e.key === 'ArrowRight') navigate(1);
        });
    </script>

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Blog</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div id="container">
        <div id="background-gradient"></div>
        <section class="blog-section">
            <h2 class="main-title">My Blog Posts</h2>
            <p class="subtitle">Thoughts and insights about software development and technology</p>
            
            <div class="blog-grid">
                {blogs.map(blog => (
                    <a href={blog.url} target="_blank" rel="noopener noreferrer" class="blog-card">
                        <div class="blog-img">
                            <img src={blog.image} alt={blog.title} />
                            <div class="blog-platform">
                                <span>{blog.platform}</span>
                            </div>
                        </div>
                        <div class="blog-content">
                            <p class="blog-date">{blog.date}</p>
                            <h3 class="blog-title">{blog.title}</h3>
                            <p class="blog-description">{blog.description}</p>
                            <div class="blog-read-more">
                                <span>Read Article</span>
                                <i class="fas fa-arrow-right"></i>
                            </div>
                        </div>
                    </a>
                ))}
            </div>
            
            <div class="view-all-blogs">
                <a href="https://medium.com/@jdharshankumar18" target="_blank" rel="noopener noreferrer">
                    View all my articles on Medium
                    <i class="fas fa-external-link-alt"></i>
                </a>
            </div>
        </section>
    </div>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            background-color: #000000;
            color: #ffffff;
            min-height: 100vh;
            overflow-x: hidden;
        }

        #background-gradient {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at top right, #8A2BE2 0%, transparent 50%);
            opacity: 0.15;
            z-index: 0;
            pointer-events: none;
        }

        #container {
            position: relative;
            z-index: 1;
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        .blog-section {
            padding: 4rem 0;
        }

        .main-title {
            font-size: 3.5rem;
            text-align: center;
            margin-bottom: 1rem;
            background: linear-gradient(90deg, #fff, #8A2BE2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .subtitle {
            text-align: center;
            color: #ccc;
            margin-bottom: 3rem;
            font-size: 1.1rem;
        }

        .blog-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 2rem;
            margin-bottom: 3rem;
        }

        .blog-card {
            background: rgba(138, 43, 226, 0.1);
            border: 1px solid rgba(138, 43, 226, 0.2);
            border-radius: 16px;
            overflow: hidden;
            text-decoration: none;
            color: inherit;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .blog-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(138, 43, 226, 0.2);
        }

        .blog-img {
            position: relative;
            height: 200px;
            overflow: hidden;
        }

        .blog-img img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .blog-card:hover .blog-img img {
            transform: scale(1.05);
        }

        .blog-platform {
            position: absolute;
            top: 12px;
            right: 12px;
            background: rgba(138, 43, 226, 0.9);
            color: white;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .blog-content {
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            flex-grow: 1;
        }

        .blog-date {
            font-size: 0.9rem;
            color: #8A2BE2;
            margin-bottom: 0.5rem;
        }

        .blog-title {
            font-size: 1.4rem;
            margin-bottom: 1rem;
            color: white;
            line-height: 1.4;
        }

        .blog-description {
            color: #ccc;
            line-height: 1.6;
            margin-bottom: 1.5rem;
            flex-grow: 1;
        }

        .blog-read-more {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #8A2BE2;
            font-weight: 600;
            margin-top: auto;
        }

        .blog-read-more i {
            transition: transform 0.3s ease;
        }

        .blog-card:hover .blog-read-more i {
            transform: translateX(5px);
        }

        .view-all-blogs {
            text-align: center;
        }

        .view-all-blogs a {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: #8A2BE2;
            text-decoration: none;
            font-weight: 600;
            padding: 0.8rem 1.5rem;
            border: 2px solid #8A2BE2;
            border-radius: 50px;
            transition: all 0.3s ease;
        }

        .view-all-blogs a:hover {
            background: rgba(138, 43, 226, 0.1);
            transform: translateY(-3px);
        }

        @media (max-width: 768px) {
            .main-title {
                font-size: 2.5rem;
            }

            .blog-grid {
                grid-template-columns: 1fr;
                max-width: 500px;
                margin-left: auto;
                margin-right: auto;
            }
        }

        @media (max-width: 480px) {
            #container {
                padding: 1rem;
            }

            .main-title {
                font-size: 2rem;
            }

            .subtitle {
                font-size: 1rem;
                margin-bottom: 2rem;
            }

            .blog-content {
                padding: 1.2rem;
            }

            .blog-title {
                font-size: 1.2rem;
            }

            .view-all-blogs a {
                padding: 0.6rem 1.2rem;
                font-size: 0.9rem;
            }
        }
    </style>
</body>
</html>
                    <div class="carousel-item">
                        <i class="fab fa-python"></i>
                        <span>Python</span>
                    </div>
                    <div class="carousel-item">
                        <i class="fab fa-php"></i>
                        <span>PHP</span>
                    </div>
                    <div class="carousel-item">
                        <i class="fab fa-golang"></i>
                        <span>Golang</span>
                    </div>
                    <!-- Frameworks & Tools -->
                    <div class="carousel-item">
                        <i class="fab fa-react"></i>
                        <span>React</span>
                    </div>
                    <div class="carousel-item">
                        <i class="fab fa-laravel"></i>
                        <span>Laravel</span>
                    </div>
                    <!-- Tools & Databases -->
                    <div class="carousel-item">
                        <i class="fas fa-database"></i>

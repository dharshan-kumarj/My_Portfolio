<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Web Developer Portfolio</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div id="container">
        <div id="background-gradient"></div>
        <main>
            <div class="split-container">
                <!-- Left Side Content -->
                <div class="content-left">
                    <h1>Dharshan<br>Kumar J</h1>
                    <div class="animated-text">
                        <span class="static-text">I am</span>
                        <span class="dynamic-text" id="role-text"></span>
                        <span class="cursor">|</span>
                    </div>
                    
                    <!-- <div class="buttons">
                        <a class="button" href="#projects">View Projects</a>
                        <a class="button secondary" href="#contact">
                            Get in Touch
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </div> -->
                </div>

                <!-- Right Side Image -->
                <div class="content-right">
                    <div class="avatar">
                        <img src="../images/Dharshan.jpeg" alt="Profile" />
                    </div>
                </div>
            </div>

            <!-- Skills Carousel - Responsive Version -->
            <div class="skills-section">
                <h2>Technical Skills</h2>
                <div class="skills-carousel" id="skillsCarousel">
                    <div class="carousel-track" id="carouselTrack">
                        <!-- Languages -->
                        <div class="carousel-item">
                            <i class="fab fa-html5"></i>
                            <span>HTML5</span>
                        </div>
                        <div class="carousel-item">
                            <i class="fab fa-css3-alt"></i>
                            <span>CSS3</span>
                        </div>
                        <div class="carousel-item">
                            <i class="fab fa-js"></i>
                            <span>JavaScript</span>
                        </div>
                        <div class="carousel-item">
                            <i class="fab fa-react"></i>
                            <span>React</span>
                        </div>
                        <div class="carousel-item">
                            <i class="fas fa-code"></i>
                            <span>TypeScript</span>
                        </div>
                        <div class="carousel-item">
                            <i class="fas fa-rocket"></i>
                            <span>Astro.js</span>
                        </div>
                        <div class="carousel-item">
                            <i class="fab fa-bootstrap"></i>
                            <span>Bootstrap</span>
                        </div>
                        <div class="carousel-item">
                            <i class="fab fa-github"></i>
                            <span>Tailwind</span>
                        </div>
                        <div class="carousel-item">
                            <i class="fas fa-paintbrush"></i>
                            <span>ShadCN</span>
                        </div>
                        <div class="carousel-item">
                            <i class="fab fa-python"></i>
                            <span>Python</span>
                        </div>
                        <div class="carousel-item">
                            <i class="fab fa-php"></i>
                            <span>PHP</span>
                        </div>
                        <div class="carousel-item">
                            <i class="fas fa-database"></i>
                            <span>SQL</span>
                        </div>
                        <div class="carousel-item">
                            <i class="fab fa-node-js"></i>
                            <span>Node.js</span>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            background-color: #000000;
            color: #ffffff;
            min-height: 100vh;
            overflow-x: hidden;
        }

        #background-gradient {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at top right, #8A2BE2 0%, transparent 50%);
            opacity: 0.15;
            z-index: 0;
            pointer-events: none;
        }

        #container {
            position: relative;
            z-index: 1;
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        main {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .split-container {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 4rem;
            margin-bottom: 4rem;
        }

        .content-left {
            flex: 1;
            padding: 2rem;
        }

        .content-right {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        h1 {
            font-size: 4.5rem;
            line-height: 1.1;
            margin-bottom: 1rem;
            background: linear-gradient(90deg, #fff, #8A2BE2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        h2 {
            font-size: 2.5rem;
            margin-bottom: 2rem;
            text-align: center;
            background: linear-gradient(90deg, #fff, #8A2BE2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* Animated Text Styles */
        .animated-text {
            display: flex;
            align-items: center;
            min-height: 60px;
            margin-bottom: 2rem;
            font-size: 1.5rem;
        }

        .static-text {
            color: #fff;
            margin-right: 5px;
        }

        .dynamic-text {
            color: #8A2BE2;
            font-weight: 600;
        }

        .cursor {
            display: inline-block;
            width: 3px;
            background-color: #8A2BE2;
            animation: blink 1s infinite;
            margin-left: 2px;
            font-size: 1.5rem;
            line-height: 1.5rem;
            color: #8A2BE2;
        }

        @keyframes blink {
            0%, 100% { opacity: 1; }
            50% { opacity: 0; }
        }

        .buttons {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
        }

        .button {
            display: inline-flex;
            align-items: center;
            padding: 1rem 2rem;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .button:first-child {
            background: #8A2BE2;
            color: white;
        }

        .button.secondary {
            background: rgba(138, 43, 226, 0.1);
            color: #8A2BE2;
            border: 1px solid #8A2BE2;
        }

        .button i {
            margin-left: 0.5rem;
        }

        .avatar {
            width: 400px;
            height: 400px;
            border-radius: 20px;
            overflow: hidden;
            border: 3px solid #8A2BE2;
            box-shadow: 0 0 30px rgba(138, 43, 226, 0.3);
        }

        .avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* Skills Section & Carousel */
        .skills-section {
            margin-top: 2rem;
            padding: 3rem 2rem;
            background: rgba(138, 43, 226, 0.05);
            border-radius: 16px;
            backdrop-filter: blur(10px);
        }

        .skills-carousel {
            position: relative;
            width: 100%;
            overflow: hidden;
            padding: 1.5rem 0;
            cursor: grab;
        }

        .carousel-track {
            display: flex;
            gap: 2rem;
            transition: transform 0.3s ease;
            padding: 0 2rem;
        }

        .carousel-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1rem;
            padding: 1.5rem;
            min-width: 120px;
            background: rgba(138, 43, 226, 0.1);
            border-radius: 12px;
            border: 1px solid rgba(138, 43, 226, 0.3);
            transition: all 0.3s ease;
        }

        .carousel-item:hover {
            transform: translateY(-5px);
            background: rgba(138, 43, 226, 0.2);
            box-shadow: 0 10px 20px rgba(138, 43, 226, 0.2);
        }

        .carousel-item i {
            font-size: 2.5rem;
            color: #8A2BE2;
        }

        .carousel-item span {
            font-size: 1rem;
            font-weight: 500;
        }

        /* Responsive Design */
        @media screen and (max-width: 1024px) {
            h1 {
                font-size: 3.5rem;
            }

            .avatar {
                width: 300px;
                height: 300px;
            }

            .carousel-item {
                min-width: 110px;
                padding: 1.25rem;
            }

            .carousel-item i {
                font-size: 2.25rem;
            }
        }

        @media screen and (max-width: 768px) {
            .split-container {
                flex-direction: column-reverse;
                text-align: center;
                gap: 2rem;
            }

            .content-left {
                padding: 1rem;
            }

            .animated-text {
                justify-content: center;
            }

            .buttons {
                flex-direction: column;
                align-items: stretch;
            }

            .avatar {
                width: 250px;
                height: 250px;
            }

            h1 {
                font-size: 3rem;
            }

            h2 {
                font-size: 2rem;
            }

            .carousel-item {
                min-width: 100px;
                padding: 1rem;
            }

            .carousel-item i {
                font-size: 2rem;
            }

            .carousel-track {
                gap: 1.5rem;
                animation: autoScroll 30s linear infinite;
            }

            @keyframes autoScroll {
                0% { transform: translateX(0); }
                100% { transform: translateX(calc(-120px * 7)); } /* Adjust based on items */
            }
        }

        @media screen and (max-width: 480px) {
            h1 {
                font-size: 2.5rem;
            }

            .animated-text {
                font-size: 1.2rem;
                min-height: 50px;
            }

            .avatar {
                width: 200px;
                height: 200px;
            }

            .skills-section {
                padding: 2rem 1rem;
            }

            .carousel-item {
                min-width: 90px;
                padding: 0.75rem;
                gap: 0.75rem;
            }

            .carousel-item i {
                font-size: 1.75rem;
            }

            .carousel-item span {
                font-size: 0.85rem;
            }

            .carousel-track {
                gap: 1rem;
                padding: 0 1rem;
            }
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Text animation code
            const roleText = document.getElementById('role-text');
            const roles = [
                "Software Developer",
                "Web Developer",
                "API Developer",
                "App Developer",
                "Backend Developer",
                "Full-Stack Developer"
            ];
            
            let roleIndex = 0;
            let charIndex = 0;
            let isDeleting = false;
            let typingSpeed = 100;

            function typeEffect() {
                const currentRole = roles[roleIndex];
                
                if (isDeleting) {
                    // Deleting text
                    roleText.textContent = currentRole.substring(0, charIndex - 1);
                    charIndex--;
                    typingSpeed = 50; // Faster when deleting
                } else {
                    // Typing text
                    roleText.textContent = currentRole.substring(0, charIndex + 1);
                    charIndex++;
                    typingSpeed = 100; // Normal speed when typing
                }
                
                // If finished typing the word
                if (!isDeleting && charIndex === currentRole.length) {
                    isDeleting = true;
                    typingSpeed = 1500; // Pause at the end
                } 
                // If finished deleting the word
                else if (isDeleting && charIndex === 0) {
                    isDeleting = false;
                    roleIndex = (roleIndex + 1) % roles.length; // Move to next role
                    typingSpeed = 500; // Pause before typing next word
                }
                
                setTimeout(typeEffect, typingSpeed);
            }
            
            // Start the typing animation
            setTimeout(typeEffect, 500);
            
            // Skills carousel interaction
            const carousel = document.getElementById('skillsCarousel');
            const track = document.getElementById('carouselTrack');
            
            let isDragging = false;
            let startPosition = 0;
            let currentTranslate = 0;
            let prevTranslate = 0;
            
            // Clone items for mobile infinite scroll
            if (window.innerWidth <= 768) {
                const items = track.innerHTML;
                track.innerHTML = items + items;
            }
            
            // Mouse events for desktop
            track.addEventListener('mousedown', dragStart);
            track.addEventListener('mouseup', dragEnd);
            track.addEventListener('mousemove', drag);
            track.addEventListener('mouseleave', dragEnd);
            
            // Touch events for mobile
            track.addEventListener('touchstart', dragStart);
            track.addEventListener('touchend', dragEnd);
            track.addEventListener('touchmove', drag);
            
            // Window resize handling
            window.addEventListener('resize', handleResize);
            
            function handleResize() {
                if (window.innerWidth <= 768) {
                    // Don't apply manual dragging on mobile - use CSS animation instead
                    track.style.transform = 'translateX(0)';
                    currentTranslate = 0;
                    prevTranslate = 0;
                }
            }
            
            function dragStart(e) {
                if (window.innerWidth <= 768) return; // Don't enable drag on mobile
                
                e.preventDefault();
                if (e.type === 'touchstart') {
                    startPosition = e.touches[0].clientX;
                } else {
                    startPosition = e.clientX;
                    carousel.style.cursor = 'grabbing';
                }
                
                isDragging = true;
            }
            
            function drag(e) {
                if (!isDragging || window.innerWidth <= 768) return;
                
                let currentPosition = 0;
                if (e.type === 'touchmove') {
                    currentPosition = e.touches[0].clientX;
                } else {
                    e.preventDefault();
                    currentPosition = e.clientX;
                }
                
                const diff = currentPosition - startPosition;
                currentTranslate = prevTranslate + diff;
                
                // Apply boundaries to prevent scrolling too far
                const trackWidth = track.offsetWidth;
                const carouselWidth = carousel.offsetWidth;
                const maxTranslate = 0;
                const minTranslate = -(trackWidth - carouselWidth);
                
                if (currentTranslate > maxTranslate) {
                    currentTranslate = maxTranslate;
                } else if (currentTranslate < minTranslate) {
                    currentTranslate = minTranslate;
                }
                
                track.style.transform = `translateX(${currentTranslate}px)`;
            }
            
            function dragEnd() {
                if (!isDragging || window.innerWidth <= 768) return;
                
                isDragging = false;
                prevTranslate = currentTranslate;
                carousel.style.cursor = 'grab';
            }
        });
    </script>
</body>
</html>
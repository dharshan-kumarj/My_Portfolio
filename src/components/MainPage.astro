<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Web Developer Portfolio</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div id="container">
        <div id="background-gradient"></div>
        <main>
            <div class="split-container">
                <!-- Left Side Content -->
                <div class="content-left">
                    <h1>Dharshan<br>Kumar J</h1>
                    <div class="animated-text">
                        <span class="static-text">I am</span>
                        <span class="dynamic-text" id="role-text"></span>
                        <span class="cursor">|</span>
                    </div>
                    
                    <!-- <div class="buttons">
                        <a class="button" href="#projects">View Projects</a>
                        <a class="button secondary" href="#contact">
                            Get in Touch
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </div> -->
                </div>

                <!-- Right Side Image -->
                <div class="content-right">
                    <div class="avatar">
                        <img src="../Dharshan.jpg" alt="Profile" />
                    </div>
                </div>
            </div>
        </main>
    </div>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            background-color: #000000;
            color: #ffffff;
            min-height: 100vh;
            overflow-x: hidden;
        }

        #background-gradient {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at top right, #8A2BE2 0%, transparent 50%);
            opacity: 0.15;
            z-index: 0;
            pointer-events: none;
        }

        #container {
            position: relative;
            z-index: 1;
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        main {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .split-container {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 4rem;
        }

        .content-left {
            flex: 1;
            padding: 2rem;
        }

        .content-right {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        h1 {
            font-size: 4.5rem;
            line-height: 1.1;
            margin-bottom: 1rem;
            background: linear-gradient(90deg, #fff, #8A2BE2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* Animated Text Styles */
        .animated-text {
            display: flex;
            align-items: center;
            min-height: 60px;
            margin-bottom: 2rem;
            font-size: 1.5rem;
        }

        .static-text {
            color: #fff;
            margin-right: 5px;
        }

        .dynamic-text {
            color: #8A2BE2;
            font-weight: 600;
        }

        .cursor {
            display: inline-block;
            width: 3px;
            background-color: #8A2BE2;
            animation: blink 1s infinite;
            margin-left: 2px;
            font-size: 1.5rem;
            line-height: 1.5rem;
            color: #8A2BE2;
        }

        @keyframes blink {
            0%, 100% { opacity: 1; }
            50% { opacity: 0; }
        }

        .buttons {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
        }

        .button {
            display: inline-flex;
            align-items: center;
            padding: 1rem 2rem;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .button:first-child {
            background: #8A2BE2;
            color: white;
        }

        .button.secondary {
            background: rgba(138, 43, 226, 0.1);
            color: #8A2BE2;
            border: 1px solid #8A2BE2;
        }

        .button i {
            margin-left: 0.5rem;
        }

        .avatar {
            width: 400px;
            height: 400px;
            border-radius: 20px;
            overflow: hidden;
            border: 3px solid #8A2BE2;
            box-shadow: 0 0 30px rgba(138, 43, 226, 0.3);
        }

        .avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* Responsive Design */
        @media screen and (max-width: 1024px) {
            h1 {
                font-size: 3.5rem;
            }

            .avatar {
                width: 300px;
                height: 300px;
            }
        }

        @media screen and (max-width: 768px) {
            .split-container {
                flex-direction: column-reverse;
                text-align: center;
                gap: 2rem;
            }

            .content-left {
                padding: 1rem;
            }

            .animated-text {
                justify-content: center;
            }

            .buttons {
                flex-direction: column;
                align-items: stretch;
            }

            .avatar {
                width: 250px;
                height: 250px;
            }

            h1 {
                font-size: 3rem;
            }
        }

        @media screen and (max-width: 480px) {
            h1 {
                font-size: 2.5rem;
            }

            .animated-text {
                font-size: 1.2rem;
                min-height: 50px;
            }

            .avatar {
                width: 200px;
                height: 200px;
            }
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Text animation code
            const roleText = document.getElementById('role-text');
            const roles = [
                "Software Developer",
                "Web Developer",
                "API Developer",
                "App Developer",
                "Backend Developer",
                "Full-Stack Developer"
            ];
            
            let roleIndex = 0;
            let charIndex = 0;
            let isDeleting = false;
            let typingSpeed = 100;

            function typeEffect() {
                const currentRole = roles[roleIndex];
                
                if (isDeleting) {
                    // Deleting text
                    roleText.textContent = currentRole.substring(0, charIndex - 1);
                    charIndex--;
                    typingSpeed = 50; // Faster when deleting
                } else {
                    // Typing text
                    roleText.textContent = currentRole.substring(0, charIndex + 1);
                    charIndex++;
                    typingSpeed = 100; // Normal speed when typing
                }
                
                // If finished typing the word
                if (!isDeleting && charIndex === currentRole.length) {
                    isDeleting = true;
                    typingSpeed = 1500; // Pause at the end
                } 
                // If finished deleting the word
                else if (isDeleting && charIndex === 0) {
                    isDeleting = false;
                    roleIndex = (roleIndex + 1) % roles.length; // Move to next role
                    typingSpeed = 500; // Pause before typing next word
                }
                
                setTimeout(typeEffect, typingSpeed);
            }
            
            // Start the typing animation
            setTimeout(typeEffect, 500);
        });
    </script>
</body>
</html>
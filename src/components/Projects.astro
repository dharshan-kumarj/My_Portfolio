<style>
    .projects-section {
        padding: 5rem 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .section-title {
        font-size: 3rem;
        text-align: center;
        margin-bottom: 4rem;
        background: linear-gradient(to right, #fff, var(--text-muted));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .project-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid var(--border);
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .project-card:hover {
        transform: translateY(-10px);
        border-color: var(--accent);
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    .project-image {
        position: relative;
        height: 200px;
        overflow: hidden;
    }

    .project-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .project-card:hover .project-image img {
        transform: scale(1.1);
    }

    .project-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .project-card:hover .project-overlay {
        opacity: 1;
    }

    .project-links {
        display: flex;
        gap: 1.5rem;
        transform: translateY(20px);
        transition: transform 0.3s ease;
    }

    .project-card:hover .project-links {
        transform: translateY(0);
    }

    .project-link {
        width: 50px;
        height: 50px;
        background: #fff;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #000;
        font-size: 1.2rem;
        transition: all 0.2s ease;
    }

    .project-link:hover {
        background: var(--accent);
        color: #fff;
        transform: scale(1.1);
    }

    .project-content {
        padding: 1.5rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .project-title {
        font-size: 1.25rem;
        margin-bottom: 0.8rem;
        color: #fff;
    }

    .project-description {
        color: var(--text-muted);
        line-height: 1.6;
        margin-bottom: 1.5rem;
        font-size: 0.95rem;
        flex-grow: 1;
    }

    .project-tech {
        display: flex;
        flex-wrap: wrap;
        gap: 0.6rem;
    }

    .project-tech span {
        font-size: 0.8rem;
        color: var(--accent);
        background: rgba(138, 43, 226, 0.1);
        padding: 0.3rem 0.8rem;
        border-radius: 100px;
        border: 1px solid rgba(138, 43, 226, 0.2);
    }

    @media (max-width: 968px) {
        .projects-section {
            padding: 3rem 0;
        }
        
        .section-title {
            font-size: 2.5rem;
            margin-bottom: 3rem;
        }
    }

    @media (max-width: 768px) {
        .section-title {
            font-size: 2.2rem;
        }
        
        .projects-grid {
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 1.5rem;
        }
        
        .project-image {
            height: 180px;
        }
        
        .project-content {
            padding: 1.25rem;
        }
        
        .project-title {
            font-size: 1.1rem;
        }
        
        /* Show overlay by default on touch devices */
        .project-overlay {
            opacity: 1;
            background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.3) 100%);
        }
        
        .project-links {
            transform: translateY(0);
        }
        
        .project-link {
            width: 44px;
            height: 44px;
            -webkit-tap-highlight-color: transparent;
        }
        
        .project-link:active {
            background: var(--accent);
            color: #fff;
            transform: scale(0.95);
        }
    }
    
    @media (max-width: 480px) {
        .projects-section {
            padding: 2rem 0;
        }
        
        .section-title {
            font-size: 2rem;
            margin-bottom: 2rem;
        }
        
        .projects-grid {
            grid-template-columns: 1fr;
            gap: 1.25rem;
        }
        
        .project-card {
            border-radius: 16px;
        }
        
        .project-image {
            height: 160px;
        }
        
        .project-content {
            padding: 1rem;
        }
        
        .project-description {
            font-size: 0.9rem;
        }
        
        .project-tech span {
            font-size: 0.75rem;
            padding: 0.25rem 0.6rem;
        }
    }
</style>
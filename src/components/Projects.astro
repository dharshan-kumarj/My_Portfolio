    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            background-color: #000000;
            color: #ffffff;
            min-height: 100vh;
            overflow-x: hidden;
        }

        #background-gradient {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at top right, #8A2BE2 0%, transparent 50%);
            opacity: 0.15;
            z-index: 0;
            pointer-events: none;
        }

        #container {
            position: relative;
            z-index: 1;
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        main {
            min-height: 100vh;
            padding: 2rem 0;
        }

        .main-title {
            font-size: 3.5rem;
            text-align: center;
            margin-bottom: 3rem;
            background: linear-gradient(90deg, #fff, #8A2BE2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .cards-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            padding: 1rem;
        }

        .card {
            background: rgba(138, 43, 226, 0.1);
            border: 1px solid rgba(138, 43, 226, 0.2);
            border-radius: 20px;
            height: 400px;
            display: flex;
            flex-direction: column;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(138, 43, 226, 0.2);
        }

        .cardimg {
            height: 200px;
            border-radius: 20px 20px 0 0;
            overflow: hidden;
        }

        .cardimg img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .card:hover .cardimg img {
            transform: scale(1.1);
        }

        .carddescr-wrapper {
            padding: 1.5rem;
            flex: 1;
            display: flex;
            flex-direction: column;
            background: rgba(0, 0, 0, 0.5);
            border-radius: 0 0 20px 20px;
        }

        .cardtitle {
            font-size: 1.25rem;
            font-weight: bold;
            margin-bottom: 1rem;
            color: #fff;
        }

        .carddescr {
            color: #ccc;
            line-height: 1.5;
            flex: 1;
        }

        .cardlinks {
            display: flex;
            justify-content: space-between;
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid rgba(138, 43, 226, 0.2);
        }

        .cardlinks div {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .cardlinks i {
            color: #8A2BE2;
        }

        .cardlinks .link {
            color: #fff;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .cardlinks .link:hover {
            color: #8A2BE2;
        }

        @media (max-width: 768px) {
            .main-title {
                font-size: 2.5rem;
            }

            .cards-grid {
                grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
                gap: 1.5rem;
            }

            .card {
                height: 350px;
            }
        }

        @media (max-width: 480px) {
            #container {
                padding: 1rem;
            }

            .main-title {
                font-size: 2rem;
            }

            .cards-grid {
                grid-template-columns: 1fr;
                gap: 1rem;
            }

            .card {
                height: 300px;
            }

            .cardimg {
                height: 150px;
            }
        }
    </style>
